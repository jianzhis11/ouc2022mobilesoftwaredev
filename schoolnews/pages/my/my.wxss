/* pages/my/my.wxss */
.myLogin {
    background-color: #328BBE;
    height: 500rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.myIcon {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.nickName {
    color: white;
}

.myFavorites {
    padding: 20rpx;
}

.myFavorites .shoucang {
    width: 100%;
    text-align: center;
    color: black;
    font-size: large;
}

.news-list {
    min-height: 600rpx;
    padding: 15rpx;
}

.list-item {
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid gray;
}

.list-item image {
    width: 230rpx;
    height: 150rpx;
    margin: 10rpx;
}

.list-item text {
    width: 100%;
    line-height: 60rpx;
    font-size: 10pt;
}